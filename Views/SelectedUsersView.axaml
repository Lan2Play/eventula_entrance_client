<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:eventula_entrance_client.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="eventula_entrance_client.Views.SelectedUsersView">
<DockPanel>

    <StackPanel>
      <ListBox Items="{Binding SelectedUsers}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <CheckBox Margin="4"> 
            <StackPanel Grid.Row="1" Margin="30 0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
              <TextBlock FontSize="20" Text="{Binding UserId}"/>
              <TextBlock FontSize="20" Text=": "/>
              <TextBlock FontSize="20" Text="{Binding Name}"/>
              <TextBlock FontSize="20" Text=" "/>
              <TextBlock FontSize="12" Text="Seat:"/>
              <TextBlock FontSize="12" Text="{Binding Seat}"/>
            </StackPanel>
          </CheckBox>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>

  </DockPanel>
</UserControl>
