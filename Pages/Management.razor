@page "/management"

@implements IDisposable


<h1>Hello, world!</h1>

<video id="videoFeed" width="1920" height="1080" style="margin-left:-5000px" />


<div class="row">
    <div class="col-10">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var signInPlace in ParticipantSignInPlaces)
            {
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            @if (signInPlace.Participant != null)
                            {
                                <h5 class="card-title">@signInPlace.Participant.User.Firstname @signInPlace.Participant.User.Surname</h5>
                                <p class="card-text">Fahrrad</p>
                            }
                            else
                            {
                                <h5 class="card-title">Nicht belegt</h5>
                                <p class="card-text"></p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-2">
        <div class="d-grid gap-1">
            @foreach (var participant in Participants)
                {
                    <button class="btn btn-primary" type="button" onclick="@(() => AddToSignInPlace(participant))">@participant.User.Firstname @participant.User.Surname</button>
                }    
        </div>
    </div>
</div>

<footer class="fixed-bottom text-center footer">
    <a href="settings/?ac=@AccessCode">Settings</a>
</footer>