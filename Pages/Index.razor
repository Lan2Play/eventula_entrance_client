@page "/"

<div class="row h-100 login-page">
	<div class="col align-self-center">


		<div class="d-flex flex-column justify-content-center align-items-center">
			<form @onsubmit=Enter class="text-center mb-3">

				<div class="d-flex justify-content-center">
					<input type="password" id="secret" @bind="@AccessCode" class="form-control border-primary shadow-none m-2 mb-3 lg-font" placeholder="Zugangscode">
				</div>

				<div class="d-flex justify-content-center">
					<div class="m-2">
						<button class="btn btn-outline-primary btn-block shadow-none lg-font btn-key" @onclick="() => AddToCode(7)">7</button>
					</div>
					<div class="m-2">
						<button class="btn btn-outline-primary btn-block shadow-none lg-font btn-key" @onclick="() => AddToCode(8)">8</button>
					</div>
					<div class="m-2">
						<button class="btn btn-outline-primary btn-block shadow-none lg-font btn-key" @onclick="() => AddToCode(9)">9</button>
					</div>
				</div>

				<div class="d-flex justify-content-center">
					<div class="m-2">
						<button class="btn btn-outline-primary btn-block shadow-none lg-font btn-key" @onclick="() => AddToCode(4)">4</button>
					</div>
					<div class="m-2">
						<button class="btn btn-outline-primary btn-block shadow-none lg-font btn-key" @onclick="() => AddToCode(5)">5</button>
					</div>
					<div class="m-2">
						<button class="btn btn-outline-primary btn-block shadow-none lg-font btn-key" @onclick="() => AddToCode(6)">6</button>
					</div>
				</div>

				<div class="d-flex justify-content-center">
					<div class="m-2">
						<button class="btn btn-outline-primary btn-block shadow-none lg-font btn-key" @onclick="() => AddToCode(1)">1</button>
					</div>
					<div class="m-2">
						<button class="btn btn-outline-primary btn-block shadow-none lg-font btn-key" @onclick="() => AddToCode(2)">2</button>
					</div>
					<div class="m-2">
						<button class="btn btn-outline-primary btn-block shadow-none lg-font btn-key" @onclick="() => AddToCode(3)">3</button>
					</div>
				</div>

				<div class="d-flex justify-content-center">
					<div class="m-2">
						<button class="btn btn-outline-primary btn-block shadow-none lg-font btn-key" @onclick="() => AddToCode(0)">0</button>
					</div>
				</div>
			</form>
		</div>



	</div>

	<div class="d-flex justify-content-center">
		<div class="m-2 align-self-center" hidden="@ErrorHidden" style="width: 520px; position: fixed;">
			<div class="alert alert-danger d-flex align-items-center alert-dismissible fade show" role="alert">
				<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
					<path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
				</svg>
				<div>
					Falscher Zugangscode. Bitte Zugangscode überprüfen.
				</div>

				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" @onclick="@CloseAlert"></button>
			</div>
		</div>
	</div>

</div>



<footer class="fixed-bottom text-center footer">
	<a href="/impressum">Impressum</a>
</footer>

